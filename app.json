{
  "expo": {
    "name": "Project Lyoko",
    "slug": "project-lyoko",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "automatic",
    "scheme": "project-lyoko",
    "newArchEnabled": true,
    "icon": "./assets/appicon.jpg",
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.projectlyoko.app",
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs camera access to scan rooms and capture photos for 3D reconstruction.",
        "NSPhotoLibraryUsageDescription": "This app needs access to your photo library to save scanned room models.",
        "NSPhotoLibraryAddUsageDescription": "This app needs access to save exported STL files to your photo library.",
        "NSMicrophoneUsageDescription": "Microphone access is not used by this app.",
        "NSLocationWhenInUseUsageDescription": "Location access is used for magnetometer (compass) readings to guide room scanning.",
        "NSMotionUsageDescription": "This app needs motion sensor access to track device orientation during room scanning.",
        "UIRequiredDeviceCapabilities": [
          "arkit",
          "arkit"
        ],
        "ITSAppUsesNonExemptEncryption": false
      },
      "privacyManifests": {
        "NSPrivacyAccessedAPITypes": [
          {
            "NSPrivacyAccessedAPIType": "NSPrivacyAccessedAPICategoryUserDefaults",
            "NSPrivacyAccessedAPITypeReasons": ["CA92.1"]
          },
          {
            "NSPrivacyAccessedAPIType": "NSPrivacyAccessedAPICategoryFileTimestamp",
            "NSPrivacyAccessedAPITypeReasons": ["0A2A.1", "3B52.1", "C617.1"]
          },
          {
            "NSPrivacyAccessedAPIType": "NSPrivacyAccessedAPICategoryDiskSpace",
            "NSPrivacyAccessedAPITypeReasons": ["E174.1", "85F4.1"]
          },
          {
            "NSPrivacyAccessedAPIType": "NSPrivacyAccessedAPICategorySystemBootTime",
            "NSPrivacyAccessedAPITypeReasons": ["35F9.1"]
          }
        ],
        "NSPrivacyCollectedDataTypes": [],
        "NSPrivacyTracking": false
      }
    },
    "android": {
      "permissions": [
        "CAMERA",
        "WRITE_EXTERNAL_STORAGE",
        "READ_EXTERNAL_STORAGE",
        "ACCESS_FINE_LOCATION",
        "ACTIVITY_RECOGNITION",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ],
      "package": "com.projectlyoko.app"
    },
    "web": {
      "bundler": "metro"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera to scan rooms."
        }
      ],
      "expo-roomplan",
      [
        "expo-build-properties",
        {
          "ios": {
            "deploymentTarget": "17.0"
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "906f612c-4c33-41cf-ab90-5b772b2e1968"
      }
    }
  }
}
